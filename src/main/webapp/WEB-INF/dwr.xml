<!DOCTYPE dwr PUBLIC
        "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
        "http://getahead.org/dwr/dwr30.dtd">

<dwr>

    <!-- init is only needed if you are extending DWR -->
    <init>
        <!--
        <creator id="1" class="name"/>
        <converter id="1" class="name"/>
        -->
    </init>

    <!-- without allow, DWR isn't allowed to do anything -->
    <allow>
        <create creator="new" javascript="Clock" scope="application">
            <param name="class" value="org.stock.dwr.Clock"/>
        </create>
    </allow>

    <!-- you may need to tell DWR about method signatures -->
    <signatures>
        ...
    </signatures>

</dwr>